    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

	<bean id="salaryDAO" class="com.oa.dao.SalaryDAOImpl" autowire="byType"></bean>
	<bean id="salaryService" class="com.oa.service.SalaryServiceImpl" autowire="byType"></bean>
	<bean id="salaryAction" class="com.oa.action.SalaryAction" autowire="byType"></bean>

